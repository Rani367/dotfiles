// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // UI elements to hide
  "assistant": { "button": false },
  "chat_panel": { "button": false },
  "collaboration_panel": { "button": false },
  "project_panel": { "button": false },
  "notification_panel": { "button": false },
  "outline_panel": { "button": false },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "title_bar": {
    "show_branch_icon": false,
    "show_branch_name": false
  },

  "session": {
    "trust_all_worktrees": true
  },
  "icon_theme": {
    "mode": "system",
    "light": "Zed (Default)",
    "dark": "Zed (Default)"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_size": 20,
  "buffer_font_size": 22,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "format_on_save": "on",
  "formatter": "language_server",
  "lsp": {
    "pyright": {
      "settings": {
        "python": {
          "analysis": {
            "diagnosticMode": "openFilesOnly",
            "typeCheckingMode": "standard"
          }
        }
      }
    },
    "clangd": {
      "arguments": [
        "--background-index",
        "--clang-tidy",
        "--header-insertion=iwyu"
      ]
    }
  },
  "languages": {
    "Python": {
      "formatter": {
        "external": {
          "command": "black",
          "arguments": [
            "-",
            "--quiet"
          ]
        }
      }
    },
    "C": {
      "formatter": {
        "external": {
          "command": "clang-format",
          "arguments": [
            "--assume-filename={buffer_path}"
          ]
        }
      }
    },
    "C++": {
      "formatter": {
        "external": {
          "command": "clang-format",
          "arguments": [
            "--assume-filename={buffer_path}"
          ]
        }
      }
    },
    "C#": {
      "formatter": {
        "external": {
          "command": "dotnet",
          "arguments": [
            "csharpier",
            "--write-stdout"
          ]
        }
      }
    },
    "JSON": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": [
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    },
    "YAML": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": [
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    },
    "Markdown": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": [
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    }
  }
}
